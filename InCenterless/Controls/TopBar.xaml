<UserControl x:Class="InCenterless.Controls.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InCenterless.Controls"
             mc:Ignorable="d" 
             Height="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Logo -->
        <Button  Grid.Column="0" Width="300" Height="80" Margin="20,0,0,0" Click="MinimizeButton">
            <Image Source="/Resources/Images/ORSKOREA_.png" Stretch="Fill"/>
        </Button>


        <!-- Buttons -->
        <StackPanel Orientation="Horizontal"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Margin="30,5,0,0"
                 Grid.Column="2">

            <Button Width="80" Height="80" Margin="0,0,20,0" Click="HomeButton">
                <Image Source="/Resources/Images/HomeOFF.png" Stretch="Fill"/>
            </Button>
            <Button Width="80" Height="80" Margin="0,0,20,0" Click="ModeButton">
                <Image Source="/Resources/Images/ModeOFF.png" Stretch="Fill"/>
            </Button>
            <Button Width="80" Height="80" Margin="0,0,20,0" Click="SetButton">
                <Image Source="/Resources/Images/SetOFF.png" Stretch="Fill"/>
            </Button>
            <Button Width="80" Height="80" Click="MaintButton">
                <Image Source="/Resources/Images/MaintenanceOFF.png" Stretch="Fill"/>
            </Button>
        </StackPanel>

        <!-- Time & Date -->
        <StackPanel Grid.Column="4"
                 VerticalAlignment="Top"
                 Margin="0,10,20,0"
                 HorizontalAlignment="Right">
            <TextBlock x:Name="TimeTextBlock"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Black"
                    HorizontalAlignment="Right"/>
            <TextBlock x:Name="DateTextBlock"
                    FontSize="16"
                    Foreground="Black"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</UserControl>
