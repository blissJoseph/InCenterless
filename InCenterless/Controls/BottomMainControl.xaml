<UserControl x:Class="InCenterless.Controls.BottomMainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InCenterless.Controls"
             mc:Ignorable="d" 
          Height="Auto">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- === Section 1 Title === -->
        <TextBlock Grid.Column="0" Grid.Row="0" 
                Text="Mode"
                FontSize="20" FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="20,0,0,0"
                Width="245"
                TextAlignment="Center"/>

        <!-- === Section 1 Square with 4x3 Button Layout === -->
        <Border Grid.Column="0" Grid.Row="1"
             Width="260" Height="350"
             Margin="10,0,30,0"
             Background="#FFEFEFEF"
             Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Row 0 -->
                <Button Grid.Row="0" Grid.Column="0" Content="AUTO" FontSize="18"/>
                <Button Grid.Row="0" Grid.Column="1" Content="SBK" FontSize="18" />
                <Button Grid.Row="0" Grid.Column="2" Content="HANDLE" FontSize="18" />

                <!-- Row 1 -->
                <Button Grid.Row="1" Grid.Column="0" Content="MDA" FontSize="18" />
                <Button Grid.Row="1" Grid.Column="1" Content="OSP" FontSize="18" />
                <Button Grid.Row="1" Grid.Column="2" Content="JOG" FontSize="18" />

                <!-- Row 2 -->
                <Button Grid.Row="2" Grid.Column="0" Content="EDIT" FontSize="18" />
                <Button Grid.Row="2" Grid.Column="1" Content="MLK" FontSize="18" />
                <Button Grid.Row="2" Grid.Column="2" Content="RPD" FontSize="18" />

                <!-- Row 3 -->
                <Button Grid.Row="3" Grid.Column="0" Content="TEACH IN" FontSize="18" />
                <Button Grid.Row="3" Grid.Column="1" Content="DRN" FontSize="18" />
                <Button Grid.Row="3" Grid.Column="2" Content="REF" FontSize="18" />
            </Grid>
        </Border>

        <!-- === Section 2 Title === -->
        <TextBlock Grid.Column="1" Grid.Row="0"
                Text="Function"
                FontSize="20" FontWeight="Bold"
                HorizontalAlignment="Center"
                Width="245"
                TextAlignment="Center"/>

        <!-- === Section 2 Square with 4x3 Button Layout === -->
        <Border Grid.Column="1" Grid.Row="1"
             Width="260" Height="350"
             Margin="0,0,0,0"
             Background="#FFEFEFEF"
             Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Row 0 -->
                <Button Grid.Row="0" Grid.Column="0"  FontSize="18">
                    <TextBlock TextAlignment="Center">
                            G/W
                            <LineBreak/>
                            SPINDLE
                    </TextBlock>
                </Button>
                <Button Grid.Row="0" Grid.Column="1" Content=""  FontSize="18"/>
                <Button Grid.Row="0" Grid.Column="2"  FontSize="18">
                    <TextBlock TextAlignment="Center">
                         R/W
                         <LineBreak/>
                         SPINDLE
                    </TextBlock>
                </Button>

                <!-- Row 1 -->
                <Button Grid.Row="1" Grid.Column="0" Content=""  FontSize="18"/>
                <Button Grid.Row="1" Grid.Column="1" Content=""  FontSize="18"/>
                <Button Grid.Row="1" Grid.Column="2" Content=""  FontSize="18"/>

                <!-- Row 2 -->
                <Button Grid.Row="2" Grid.Column="0" Content=""  FontSize="18"/>
                <Button Grid.Row="2" Grid.Column="1" Content=""  FontSize="18"/>
                <Button Grid.Row="2" Grid.Column="2" Content=""  FontSize="18"/>

                <!-- Row 3 -->
                <Button Grid.Row="3" Grid.Column="0" Content=""  FontSize="18"/>
                <Button Grid.Row="3" Grid.Column="1" Content=""  FontSize="18"/>
                <Button Grid.Row="3" Grid.Column="2" Content=""  FontSize="18"/>
            </Grid>
        </Border>

        <!-- === Section 3 Title === -->
        <TextBlock Grid.Column="2" Grid.Row="0"
                Text="Coolant"
                FontSize="20" FontWeight="Bold"
                HorizontalAlignment="Center"
                Width="245"
                TextAlignment="Center"/>

        <!-- === Section 3 Square with 4x2 Button Layout === -->
        <Border Grid.Column="2" Grid.Row="1"
             Width="180" Height="350"
             Margin="0,0,0,0"
             Background="#FFEFEFEF"
             Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Row 0 -->
                <Button Grid.Row="0" Grid.Column="0" Content="MANU"   FontSize="18"/>
                <Button Grid.Row="0" Grid.Column="1" Content="AUTO"   FontSize="18"/>

                <!-- Row 1 -->
                <Button Grid.Row="1" Grid.Column="0" Content="G/W"   FontSize="18"/>
                <Button Grid.Row="1" Grid.Column="1" Content="R/W"   FontSize="18"/>

                <!-- Row 2 -->
                <Button Grid.Row="2" Grid.Column="0" Content="DRS"   FontSize="18"/>
                <Button Grid.Row="2" Grid.Column="1" Content=""   FontSize="18"/>

                <!-- Row 3 -->
                <Button Grid.Row="3" Grid.Column="0" Content=""   FontSize="18"/>
                <Button Grid.Row="3" Grid.Column="1"   FontSize="18">
                    <TextBlock TextAlignment="Center">
                        NO
                        <LineBreak/>
                        CLNT
                    </TextBlock>
                </Button>
            </Grid>
        </Border>

        <!-- === Section 4 Title === -->
        <TextBlock Grid.Column="3" Grid.Row="0"
                Text="Axis"
                FontSize="20" FontWeight="Bold"
                HorizontalAlignment="Center"
                Width="245"
                TextAlignment="Center"/>

        <!-- === Section 4 Square with 4x3 Button Layout === -->
        <Border Grid.Column="3" Grid.Row="1"
             Width="260" Height="350"
             Margin="0,0,20,0"
             Background="#FFEFEFEF"
             Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Row 0 -->
                <Button Grid.Row="0" Grid.Column="0" Content=""   FontSize="18"/>
                <Button Grid.Row="0" Grid.Column="1" Content=""   FontSize="18"/>
                <Button Grid.Row="0" Grid.Column="2" Content="Z"   FontSize="18"/>

                <!-- Row 1 -->
                <Button Grid.Row="1" Grid.Column="0" Content="U1"   FontSize="18"/>
                <Button Grid.Row="1" Grid.Column="1" Content=""   FontSize="18"/>
                <Button Grid.Row="1" Grid.Column="2" Content="S1"   FontSize="18"/>

                <!-- Row 2 -->
                <Button Grid.Row="2" Grid.Column="0" Content="U2"   FontSize="18"/>
                <Button Grid.Row="2" Grid.Column="1" Content=""   FontSize="18"/>
                <Button Grid.Row="2" Grid.Column="2" Content="W2"   FontSize="18"/>

                <!-- Row 3 -->
                <Button Grid.Row="3" Grid.Column="0" Content="-"   FontSize="18"/>
                <Button Grid.Row="3" Grid.Column="1" Content="100%"   FontSize="18"/>
                <Button Grid.Row="3" Grid.Column="2" Content="+"   FontSize="18"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
